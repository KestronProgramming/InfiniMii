    <script>
        document.getElementById('resetRequestForm').addEventListener('submit', function(e) {
            handleFormSubmit(e, '/requestPasswordReset', 'Sending...', 'message', {
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                bodyFormatter: (formData) => {
                    return new URLSearchParams({ email: formData.get('email') });
                },
                onSuccess: (result, messageDiv) => {
                    messageDiv.textContent = result.message || 'Reset link sent! Check your email.';
                    messageDiv.className = 'form-message success';
                    messageDiv.style.display = 'block';
