        </div>
        <form id="resetPasswordForm">
            <fieldset>
                <legend>Reset Password</legend>
                <div id="message" class="form-message" style="display: none;"></div>
                <p style="color: var(--text-2); margin-bottom: 15px;">
                    Enter your new password below.
                </p>
                <input type="hidden" name="username" id="username" value="<%= username || '' %>">
                <input type="hidden" name="token" id="token" value="<%= token || '' %>">
                <input placeholder="New Password (min 8 characters)" required name="newPassword" type="password" id="newPassword" minlength="8">
                <input placeholder="Confirm New Password" required type="password" id="confirmPassword">
                <input type="submit" value="Reset Password">
                <p style="margin-top: 15px;">
                    <a href="/login">Back to Login</a>
                </p>
